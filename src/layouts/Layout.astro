---
import "../styles/global.css";

const {
  title = "Kiafa Destapaciones | Destapaciones 24hs",
  description = "Destapaciones en CABA y GBA. Cloacas, cañerías, baños, cocinas, pluviales y video inspección. Atención 24 horas.",
} = Astro.props;

---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="destapaciones, kiafadestapaciones, destapaciones caba, destapaciones liniers, destapación de cañerías, destapación de desagues, destapación pluviales, destapación de baños, destapación de cocinas, destapaciones 24 horas, destapaciones sin roturas" />
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow">
    <meta name="author" content="Kiafa Destapaciones" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="es_AR" />
    <meta property="og:url" content={Astro.site} />
    <meta property="og:site_name" content="Kiafa Destapaciones" />
    <meta name="theme-color" content="#0f172a">
    
    <link rel="icon" type="image/svg+xml" href="/favicon-light.svg" media="(prefers-color-scheme: light)">
    <link rel="icon" type="image/svg+xml" href="/favicon-dark.svg" media="(prefers-color-scheme: dark)">
    
    <link rel="manifest" href="/site.webmanifest">
    <link rel="canonical" href={Astro.site} />
  </head>

  <body>
    <slot />
  </body>
</html>
