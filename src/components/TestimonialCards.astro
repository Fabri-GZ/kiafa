---
interface Props {
  name: string;
  text: string;
  rating: number;
  url?: string;
}

const { name, text, rating, url } = Astro.props;
---

<article class="h-full min-h-70 rounded-2xl bg-white p-6 shadow-md border border-slate-100 flex flex-col">
  <div class="flex-1">
    <div class="mb-3 flex gap-1 text-yellow-400">
      {Array.from({ length: rating }).map(() => "★")}
    </div>

    {text && (
      <p class="text-slate-700 mb-4 leading-relaxed">
        “{text}”
      </p>
    )}
  </div>

  <div class="pt-4 flex items-center justify-between">
    <span class="text-sm font-semibold text-slate-900">
      {name}
    </span>

    {url && (
      <a
        href={url}
        target="_blank"
        rel="noopener noreferrer"
        class="text-xs text-blue-600 hover:underline"
      >
        Ver en Google
      </a>
    )}
  </div>
</article>
